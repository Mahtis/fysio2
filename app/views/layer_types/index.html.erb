<p id="notice"><%= notice %></p>

<h1>Layer Types</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @layer_types.each do |layer_type| %>
      <tr>
        <td><%= layer_type.name %></td>
        <td><%= link_to 'Show', layer_type %></td>
        <td><%= link_to 'Edit', edit_layer_type_path(layer_type) %></td>
        <td><%= link_to 'Destroy', layer_type, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

